conky.config = {
	xinerama_head = 0,
    alignment = 'top_right',
    background = false,	
    border_width = 1,
    cpu_avg_samples = 2,
	double_buffer = yes,
	default_color = 'green',
    default_outline_color = 'cyan',
    default_shade_color = 'blue',
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    use_xft = true,
    font = 'DejaVu Sans Mono:size=11',
    gap_x = 30,
    gap_y = 20,
    minimum_height = 5,
	minimum_width = 5,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
	own_window_transparent = true,
	own_window_argb_visual = true,
    own_window_class = 'Conky',
    own_window_type = 'desktop',
    stippled_borders = 0,
    update_interval = 1,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = true,
    show_graph_range = true
}

conky.text = [[
${scroll 35 $nodename - $sysname $kernel on $machine | }
${color white}Uptime:$color $uptime
$hr
RAM:
${color white}RAM Usage:$color $mem/$memmax - $memperc% ${membar 4}
${color white}Swap Usage:$color $swap/$swapmax - $swapperc% ${swapbar 4}
$hr
${color white}Cryptographic:
Entropy available: $color ${entropy_avail} (${entropy_perc} %)
${entropy_bar}
$hr
${color white}${execi 1000 cat /proc/cpuinfo | grep 'model name' | sed -e 's/model name.*: //'| uniq | cut -c 10-36} CPU:
${color white}Frequency:$color $freq MHz
${color white}${exec cat /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_label}${color white}: $color${exec cat /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input | cut -c-2} / ${exec cat /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_max | cut -c-3} °C
${color white}${exec cat /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp2_label}${color white}: $color${exec cat /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp2_input | cut -c-2} / ${exec cat /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp2_max | cut -c-3} °C
${color white}${exec cat /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp3_label}${color white}: $color${exec cat /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp3_input | cut -c-2} / ${exec cat /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp3_max | cut -c-3} °C
${color white}${exec cat /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp4_label}${color white}: $color${exec cat /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp4_input | cut -c-2} / ${exec cat /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp4_max | cut -c-3} °C
${color white}${exec cat /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp5_label}${color white}: $color${exec cat /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp5_input | cut -c-2} / ${exec cat /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp5_max | cut -c-3} °C
${color white}Usage:$color $cpu% ${cpubar}
${color white}LCORE0: $color${cpu cpu0}% $alignr ${freq_g 0} GHz $alignr ${cpubar cpu0 8,60}
${color white}LCORE1: $color${cpu cpu1}% $alignr ${freq_g 1} GHz $alignr ${cpubar cpu1 8,60}
${color white}LCORE2: $color${cpu cpu2}% $alignr ${freq_g 2} GHz $alignr ${cpubar cpu2 8,60}
${color white}LCORE3: $color${cpu cpu3}% $alignr ${freq_g 3} GHz $alignr ${cpubar cpu3 8,60}
${color white}LCORE4: $color${cpu cpu4}% $alignr ${freq_g 4} GHz $alignr ${cpubar cpu4 8,60}
${color white}LCORE5: $color${cpu cpu5}% $alignr ${freq_g 5} GHz $alignr ${cpubar cpu5 8,60}
${color white}LCORE6: $color${cpu cpu6}% $alignr ${freq_g 6} GHz $alignr ${cpubar cpu6 8,60}
${color white}LCORE7: $color${cpu cpu7}% $alignr ${freq_g 7} GHz $alignr ${cpubar cpu7 8,60}
${color white}Processes:$color $processes  ${alignr 8}${color white}Running:$color $running_processes
$hr
#${color white}GPU:
#${color white}${exec nvidia-smi --query-gpu=gpu_name --format=csv,noheader,nounits} GPU: $color $alignr ${nvidia gpufreq} Mhz | Load: ${exec nvidia-smi | grep % | cut -c 61-63} %
#${color white}Memory: $color $alignr ${nvidia memfreq} Mhz |${exec nvidia-smi | grep % | cut -c 37-40}/${exec nvidia-smi | grep % | cut -c 48-51} MB
#${color white}Temperature: $color $alignr ${nvidia temp} °C
#${color white}Power: $color $alignr ${exec nvidia-smi | grep % | cut -c 21-23} W
#$hr
${color white}File systems:
${color white}/boot $color${fs_used /boot}/${fs_size /boot} ${fs_bar 6 /boot}
${color white}/ $color${fs_used /}/${fs_size /} ${fs_bar 6 /}
${color white}/tmp $color${fs_used /tmp}/${fs_size /tmp} ${fs_bar 6 /tmp}
$hr
${color white}Disk-Load:
${color white}/dev/nvme0n1 (R/W)	$alignr $color${diskio_read /dev/nvme0n1}/ ${diskio_write /dev/nvme0n1}
$hr
${color white}Networking:

Ethernet ($color${addr enx803f5d0467b2}${color white}):
 Up:$color ${upspeed enx803f5d0467b2} ${color white}${alignr 8}Down:$color ${downspeed enx803f5d0467b2}
${color white}WiFi ($color${addr wlp0s20f3}${color white}):
 Up:$color ${upspeed wlp0s20f3} ${color white}${alignr 8}Down:$color ${downspeed wlp0s20f3}
${color white}vboxnet0 ($color${addr vboxnet0}${color white}):
 Up:$color ${upspeed vboxnet0} ${color white}${alignr 8}Down:$color ${downspeed vboxnet0}
${color white}docker0 ($color${addr docker0}${color white}):
 Up:$color ${upspeed docker0} ${color white}${alignr 8}Down:$color ${downspeed docker0}
$hr
${font Product Sand:size=22}\
${color}${time %H}${color0}:${color}${time %M}\
${font Product Sand:weight=Bold:size=12}${color0}\
${time %p}
#${voffset -10}
#${voffset -30}
${font Product Sans:size=10}${color0}\
${time %A}
${font Product Sans:weight=Bold:size=16}${color0}\
${color}${time %d. %B} ${color0}\
${font Product Sand:size=16}${time %Y}
${font Product Sans:size=10}${color0}\
KW: ${color}${time %W} ${color0}
]]
